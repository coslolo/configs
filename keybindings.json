[
  {
    "key": "tab",
    "command": "tab"
  },
  {
    "key": "ctrl+r",
    "command": "redo"
  },
  {
    "key": "ctrl+t",
    "command": "workbench.action.toggleZenMode"
  },
  {
    "key": "ctrl+m",
    "command": "toggleVim"
  },
  {
    "key": "ctrl+w",
    "command": "extension.vim_ctrl+w"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  // Traverse VSCode IntelliSense suggestions with vim keybindings.
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  // Traverse VSCode quick open options with vim keybindings.
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevCodeAction",
    "when": "codeActionMenuVisible"
  },
  // open the explorer instead of closing vs code (accidentally)
  {
    "key": "ctrl+shift+w",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  // let ctrl+l clean the terminal (keep in mind that this overrides prev remaps)
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.clearPreviousSessionHistory",
    "when": "terminalFocus"
  }
  // end
]
